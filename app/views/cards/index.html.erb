<%
deck = []
ranks = [2, 3, 4, 5, 6, 7, 8, 9, 10, "jack", "queen", "king", "ace"]
suits = ["clubs", "diamonds", "hearts", "spades"]

for rank in ranks
  for suit in suits
    card = "#{rank}_of_#{suit}"
    deck.push(card)
  end
end

shuffled_deck = deck.shuffle
hand = shuffled_deck[0,5]
%>

<h1> Shuffle the Cards </h1>
<p>
<% for card in hand %>
<li><%= card %><li>
<%end%>
</p>
<p>
    <a href=“/cards”>Roll Again</a>
</p>

<% for card in hand%>
<img src="/images/cards/<%= card %>.svg">
<% end%>